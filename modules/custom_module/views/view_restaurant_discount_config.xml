<odoo>
    <record id="view_restaurant_discount_config_form" model="ir.ui.view">
        <field name="name">restaurant.discount.config.form</field>
        <field name="model">restaurant.discount.config</field>
        <field name="arch" type="xml">
            <form string="Configuration Remise QR">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="discount_name" placeholder="Nom de la remise..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="is_mobile_default" string="Code Promo Mobile par Défaut" help="Marquer ce code promo comme étant le code par défaut pour les commandes mobile self-order"/>
                        <field name="discount_code" required="1"/>
                        <field name="enabled"/>
                        <field name="discount_percentage"/>
                        <field name="min_amount"/>
                        <field name="max_discount" help="Laisser vide pour pas de plafond"/>
                    </group>
                    <group string="Type de limitation">
                        <field name="limitation_type" widget="radio" help="Choisissez comment limiter l'utilisation de ce code promo"/>
                    </group>
                    <group string="Limitation par nombre d'utilisations" invisible="limitation_type != 'usage'">
                        <field name="usage_readonly" invisible="1"/>
                        <field name="max_usage" help="Nombre maximum d'utilisations (désactivé automatiquement à 0)" readonly="usage_readonly" required="limitation_type == 'usage'"/>
                    </group>
                    <group string="Limitation par dates" invisible="limitation_type != 'dates'">
                        <field name="dates_readonly" invisible="1"/>
                        <field name="start_date" help="Date de début de validité du code promo" readonly="dates_readonly"/>
                        <field name="expiration_date" help="Date d'expiration du code promo" readonly="dates_readonly"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_restaurant_discount_config_tree" model="ir.ui.view">
        <field name="name">restaurant.discount.config.tree</field>
        <field name="model">restaurant.discount.config</field>
        <field name="arch" type="xml">
            <list string="Configurations de Remises">
                <field name="discount_code"/>
                <field name="discount_name"/>
                <field name="is_mobile_default" string="Mobile par Défaut" widget="boolean_toggle"/>
                <field name="enabled" widget="boolean_toggle"/>
                <field name="discount_percentage" string="Remise (%)"/>
                <field name="min_amount" string="Montant min"/>
                <field name="max_discount" string="Plafond"/>
                <field name="limitation_type" string="Type"/>
                <field name="max_usage" string="Utilisations" optional="show"/>
                <field name="start_date" string="Date début" optional="show"/>
                <field name="expiration_date" string="Date fin" optional="show"/>
            </list>

        </field>
    </record>

    <record id="view_restaurant_discount_config_search" model="ir.ui.view">
        <field name="name">restaurant.discount.config.search</field>
        <field name="model">restaurant.discount.config</field>
        <field name="arch" type="xml">
            <search string="Recherche Configuration Remise">
                <field name="discount_name"/>
                <field name="discount_code"/>
                <field name="start_date"/>
                <field name="expiration_date"/>
                <filter name="enabled" string="Activées" domain="[('enabled', '=', True)]"/>
                <filter name="disabled" string="Désactivées" domain="[('enabled', '=', False)]"/>
                <separator/>
                <filter name="mobile_default" string="Mobile par défaut" domain="[('is_mobile_default', '=', True)]"/>
                <filter name="regular_promos" string="Codes promo normaux" domain="[('is_mobile_default', '=', False)]"/>
                <separator/>
                <filter name="type_always" string="Illimités" domain="[('limitation_type', '=', 'always')]"/>
                <filter name="type_usage" string="Par nombre d'utilisations" domain="[('limitation_type', '=', 'usage')]"/>
                <filter name="type_dates" string="Par dates" domain="[('limitation_type', '=', 'dates')]"/>
                <separator/>
                <filter name="usage_available" string="Utilisations disponibles" domain="[('limitation_type', '=', 'usage'), ('max_usage', '&gt;', 0)]"/>
                <filter name="usage_exhausted" string="Utilisations épuisées" domain="[('limitation_type', '=', 'usage'), ('max_usage', '=', 0)]"/>
                <separator/>
                <filter name="active_by_date" string="Actives par date" domain="[('limitation_type', '=', 'dates'), ('enabled', '=', True), ('start_date', '&lt;=', context_today()), ('expiration_date', '&gt;=', context_today())]"/>
                <filter name="expired_promos" string="Expirées" domain="[('limitation_type', '=', 'dates'), ('expiration_date', '&lt;', context_today())]"/>
                <filter name="future_promos" string="Futures" domain="[('limitation_type', '=', 'dates'), ('start_date', '&gt;', context_today())]"/>
            </search>
        </field>
    </record>

    <record id="action_restaurant_discount_config" model="ir.actions.act_window">
        <field name="name">Configuration Remise QR Mobile</field>
        <field name="res_model">restaurant.discount.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_enabled': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une configuration de remise QR Mobile
            </p>
            <p>
                Configurez les remises automatiques pour les commandes passées via QR Mobile.
                Le restaurant ID est automatiquement récupéré depuis les paramètres système.
            </p>
        </field>
    </record>

    <menuitem id="menu_restaurant_discount_root"
              name="Remises QR Mobile"
              parent="point_of_sale.menu_point_of_sale"
              sequence="50"/>

    <menuitem id="menu_restaurant_discount_config"
              name="Configuration"
              action="action_restaurant_discount_config"
              parent="menu_restaurant_discount_root"
              sequence="10"/>

</odoo>